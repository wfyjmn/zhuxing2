        "量比>1.5",
        "价格突破20日高点"
      ],
      "strict_mode": true
    },
    "a_signal_criteria": {
      "description": "A级信号标准（仅A级可出手）",
      "requirements": [
        "资金维度必须满足全部必须项",
        "情绪维度必须满足全部必须项",
        "技术维度必须满足全部必须项"
      ]
