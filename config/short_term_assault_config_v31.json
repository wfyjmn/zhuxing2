  "triple_confirmation": {
    "description": "三重确认机制（仅保留A级信号）",
    "capital_confirmation": {
      "description": "资金维度必须满足全部必须项",
      "requirements": [
        "连续2日净流入",
        "大单买入占比>25%",
        "资金流入速度加快"
      ],
      "strict_mode": true
