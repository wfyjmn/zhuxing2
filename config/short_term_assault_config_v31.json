      "description": "负样本仅保留明确下跌、资金大幅流出的样本",
      "min_actual_return": -0.05,
      "max_prediction_prob": 0.30
    }
  },
  
  "model_config": {
    "framework": "XGBoost",
    "description": "切换到XGBoost模型，聚焦高精确率训练",
    "xgboost_params": {
      "objective": "binary:logistic",
      "eval_metric": "auc",
      "max_depth": 6,
      "eta": 0.1,
      "subsample": 0.8,
      "colsample_bytree": 0.8,
      "min_child_weight": 3,
      "gamma": 0.5,
      "lambda": 2.0,
      "alpha": 1.0,
      "scale_pos_weight": 3.0,
      "seed": 42,
      "early_stopping_rounds": 40,
      "metric_for_early_stopping": "precision",
      "min_precision_threshold": 0.80
